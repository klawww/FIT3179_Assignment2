{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Fast Food Restaurants Distribution",
  "projection": {"type": "albersUsa"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/klawww/FIT3179_Assignment2/main/dot_map/js/ne_110m_admin_1_states_provinces.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_1_states_provinces"
        }
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/klawww/FIT3179_Assignment2/main/dot_map/data/Datafiniti_Fast_Food_Restaurants_May19.csv"
      },
      "transform": [
        {
          "joinaggregate": [
            {"op": "count", "field": "name", "as": "count_name"}
          ],
          "groupby": ["name"]
        },
        {"filter": "datum.count_name >= 225"}
      ],
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {
            "type": "circle"
          },
          "encoding": {
            "color": {"field": "name", "title": "Restaurant Name", "type": "nominal"},
            "size": {"value": 20}, 
            "tooltip": [
              {"field": "name", "type": "nominal", "title": "Restaurant Name"}, 
              {"field": "primaryCategories", "type": "nominal", "title": "Categories"},
              {"field": "address", "type": "nominal", "title": "Restaurant Address"},
              {"field": "city", "type": "nominal", "title": "City"},
              {"field": "province", "type": "nominal", "title": "State"}
            ]
          }
        }
      ]
    }
  ],
  "config": {}
}
