{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 450,
  "height": 350,
  "title": {
    "text": "Top 4 Fast Food Brands Across America", 
    "font": "Calibri",
    "fontSize": 20,
    "align": "center"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/klawww/FIT3179_Assignment2/main/stacked_bar_chart/data/Datafiniti_Fast_Food_Restaurants_May19.csv"
  },
  "params": [
    {
      "name": "State_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Alabama",
          "California",
          "Florida",
          "Indiana",
          "North Carolina",
          "Ohio",
          "Oregon",
          "South Carolina",
          "Texas",
          "Virginia"
        ],
        "labels": [
          "Show All",
          "Alabama",
          "California",
          "Florida",
          "Indiana",
          "North Carolina",
          "Ohio",
          "Oregon",
          "South Carolina",
          "Texas",
          "Virginia"
        ],
        "name": "State Selection"
      }
    }
  ],
  "transform": [
    {
      "lookup": "province",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/klawww/FIT3179_Assignment2/main/stacked_bar_chart/data/State_Abbr.csv"
        },
        "key": "State_abbr",
        "fields": ["State"]
      }
    },
    {
      "aggregate": [{"op": "count", "field": "State", "as": "count_name"}],
      "groupby": ["State", "name"]
    }, 
    {"filter": "datum.name == 'Subway' ||  datum.name == 'Taco Bell' || datum.name == 'Pizza Hut' || datum.name == 'Burger King'"}, 
    {"filter": "datum.State != null"}, 
    {"filter": "datum.State == 'Ohio' || datum.State == 'Florida' || datum.State == 'California' || datum.State == 'North Carolina' || datum.State == 'Indiana' || datum.State == 'Alabama' || datum.State == 'Texas' || datum.State == 'Virginia' || datum.State == 'South Carolina' || datum.State == 'Oregon'"}, 
    {"filter": "State_selection == null || datum.State == State_selection"}
  ],
  "selection": { "brand_highlight": { "type": "multi", "fields": ["name"], "bind": "legend" } },
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "State",
      "type": "nominal",
      "title": "States", 
      "sort": "-x"
    },
    "x": {
    "field": "count_name",
    "type": "quantitative", 
    "title": "Fast Food Restaurants"
    }, 
    "color": {
      "field": "name",
      "type": "nominal",
      "scale": {
        "domain": ["Subway", "Taco Bell", "Pizza Hut", "Burger King"],
        "range": ["#e7ba52", "#f03b20", "#1f77b4", "#9467bd"]
      },
      "title": "Fast Food Brand"
    }, 
    "opacity": {
      "condition": {"selection": "brand_highlight", "value": 0.9}, 
      "value": 0.2
    }, 
    "tooltip": [
      {"field": "State", "type": "nominal"}, 
      {"field": "name", "type": "nominal", "title": "Fast Food Brand"},
      {"field": "count_name", "type": "quantitative", "title": "Amount of Restaurants"}
    ]
  },
  "config": {}
}
