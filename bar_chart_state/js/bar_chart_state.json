{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 200,
  "height": 200,
  "title": {
    "States Contain Most Subway",
    "font": "Calibri",
    "fontSize": 16,
    "align": "center"
    },
  "data": {
    "url": "https://raw.githubusercontent.com/klawww/FIT3179_Assignment2/main/bar_chart_state/data/Datafiniti_Fast_Food_Restaurants_May19.csv"
  },
  "params": [
    {
      "name": "State_selection", 
      "bind": {
        "input": "select", 
        "options": [
          null, 
          "Alabama", 
          "California", 
          "Florida", 
          "Illinois", 
          "Indiana", 
          "North Carolina", 
          "Ohio", 
          "Oregon", 
          "Texas", 
          "Washington"
        ], 
        "labels": [
          "Show All", 
          "Alabama", 
          "California", 
          "Florida", 
          "Illinois", 
          "Indiana", 
          "North Carolina", 
          "Ohio", 
          "Oregon", 
          "Texas", 
          "Washington"
        ], 
        "name": "State Selection"
      }
    }
  ],
  "transform": [
    {
      "lookup": "province",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/klawww/FIT3179_Assignment2/main/bar_chart_state/data/State_Abbr.csv"
        },
        "key": "State_abbr",
        "fields": ["State"]
      }
    }, 
    {
      "aggregate": [{"op": "count", "field": "State", "as": "count_name"}],
      "groupby": ["State", "name"]
    }, 
    {"filter": "datum.name == 'Subway'"},
    {"filter": "datum.count_name > 38"}, 
    {"filter": "State_selection == null || datum.State == State_selection"}
  ],
  "mark": "bar",
  "encoding": {
    "y": {"field": "State", "sort": "-x", "title": "States"},
    "x": {
      "field": "count_name",
      "type": "quantitative",
      "title": "Amount of Subway"
    },
    "tooltip": [
      {"field": "name", "type": "nominal", "title": "Restaurant Name"},
      {
        "field": "count_name",
        "type": "quantitative",
        "title": "Amount of Restaurants"
      }
    ]
  },
  "config": {}
}
